{
  "extends": "../tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "experimentalResolver": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@agrisense/shared": ["../shared/src"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src", "tests", "scripts"],
  "exclude": ["node_modules", "dist"]
}
